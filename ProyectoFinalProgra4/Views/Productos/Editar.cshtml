@model ProyectoFinalProgra4.Models.ProductoViewModel

<h2>@ViewData["Action"] Producto</h2>
@section Styles {
    <link rel="stylesheet" href="~/css/editar.css" asp-append-version="true" />
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-action="Editar" method="post">
    <div>
        <label>Número</label>
        <input asp-for="NumeroProducto" readonly />
    </div>
    <div>
        <label>Nombre</label>
        <input asp-for="NombreProducto" />
        <span asp-validation-for="NombreProducto" style="color:red"></span>
    </div>
    <div>
        <label>Precio</label>
        <input asp-for="Precio" type="number" step="0.01" />
        <span asp-validation-for="Precio" style="color:red"></span>
    </div>
    <button type="submit">Guardar cambios</button>
    <a asp-action="Index">Cancelar</a>
</form>